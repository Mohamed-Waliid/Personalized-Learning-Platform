<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true">

    <style>
        body {
            background: #F5F5F5;
            display: flex;
            justify-content: center;
            align-items: start; /* changed from center to start */
            min-height: 100vh; /* changed from height to min-height */
            padding-top: 40px; /* optional spacing from top */
            font-family: 'Arial', sans-serif;
        }


        .login-container {
            background: white;
            padding: 40px;
            border-radius: 12px;
            box-shadow: 0px 10px 25px rgba(0, 0, 0, 0.1);
            width: 100%;
            max-width: 520px;
            text-align: center;
            transition: transform 0.3s ease-in-out;
        }

        .login-container:hover {
            transform: translateY(-5px);
        }

        .login-container h2 {
            color: #163A70;
            font-weight: 700;
            margin-bottom: 10px;
        }

        .login-container p {
            color: #1C1C1C;
            font-size: 14px;
        }

        .form-label {
            font-weight: 500;
            color: #1C1C1C;
        }

        .form-control {
            border-radius: 8px;
            border: 1px solid #E3EAF5;
            padding: 14px;
            background: #F8F9FA;
            color: #1C1C1C;
            font-size: 16px;
        }

        .form-control:focus {
            border-color: #4A90E2;
            box-shadow: 0 0 5px rgba(74, 144, 226, 0.5);
        }

        .btn-login {
            background: #163A70;
            border: none;
            border-radius: 8px;
            padding: 14px;
            font-weight: 600;
            font-size: 16px;
            width: 100%;
            color: white;
            transition: background 0.3s, transform 0.2s;
        }

        .btn-danger {
            margin-bottom: 5px;
            background: #dc3545;
            border: none;
            border-radius: 8px;
            padding: 14px;
            font-weight: 600;
            font-size: 16px;
            width: 100%;
            color: white;
            transition: background 0.3s, transform 0.2s;
        }

        .btn-login:hover {
            background: #4A90E2;
            transform: scale(1.03);
        }

        .secondary-link {
            text-decoration: none;
            color: #4A90E2;
            font-size: 14px;
        }

        .secondary-link:hover {
            text-decoration: underline;
            color: #FFB300;
        }

        .remember-me {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 14px;
        }

        .remember-me label {
            font-weight: 500;
            color: #1C1C1C;
        }

        .form-group {
            margin-bottom: 24px;
            text-align: left;
        }
    </style>
</head>

<body>
    @RenderBody()

    <!-- jQuery and jQuery Validation Scripts -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)


</body>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

</html>
