@model List<Project>

@{
    ViewData["Title"] = "Course Projects";
}

<section class="all-courses-section">
    <div class="all-courses-container">
        <div class="all-courses-intro-section">
            <h2 class="all-courses-intro-title">@ViewBag.CourseName Projects</h2>
            <p class="all-courses-intro-text">
                Challenge yourself and push yourself to the limit with these projects.
            </p>
        </div>

        <div class="all-courses-row" id="coursesContainer">
            @foreach (var proj in Model)
            {
                <div class="all-courses-card">
                    <div class="all-courses-card-body">
                        <h5 class="all-courses-card-title">@proj.Title</h5>
                        <p class="all-courses-card-text">@proj.Description</p>
                        <p><strong>Difficulty Level: </strong> @proj.DifficultyLevel</p>

                        @if (User.IsInRole("Admin"))
                        {
                            <a style="width: 100%" asp-action="Edit" class="btn btn-secondary" asp-route-ID="@proj.ID">Edit</a>
                            <a style="width: 100%" asp-action="Delete" class="btn btn-danger" asp-route-ID="@proj.ID">Delete</a>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</section>