@using Graduation_Project.ViewModels.Project
@model AddProjectViewModel

@{
    ViewData["Title"] = "Edit Project";
    Layout = "~/Views/Shared/_Layout_form.cshtml";
}

<style>
    .custom-select-wrapper {
        position: relative;
        width: 100%;
    }

    .custom-select {
        position: relative;
    }

    .custom-select-trigger {
        padding: 10px 12px;
        border: 1px solid #ced4da;
        border-radius: 4px;
        background: #fff;
        cursor: pointer;
        font-size: 1rem;
        color: #495057;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

        .custom-select-trigger:after {
            content: "?";
            font-size: 12px;
            color: #6c757d;
            transition: transform 0.2s;
        }

    .custom-select.open .custom-select-trigger:after {
        transform: rotate(180deg);
    }

    .custom-options {
        display: none;
        position: absolute;
        top: 100%;
        left: 0;
        right: 0;
        border: 1px solid #ced4da;
        border-top: none;
        border-radius: 0 0 4px 4px;
        background: #fff;
        z-index: 10;
        max-height: 200px;
        overflow-y: auto;
        box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
    }

    .custom-select.open .custom-options {
        display: block;
    }

    .custom-option {
        padding: 10px 12px;
        font-size: 1rem;
        color: #495057;
        cursor: pointer;
        transition: all 0.2s;
        display: block;
        width: 100%;
    }

        .custom-option:hover {
            background-color: #007bff;
            color: white;
        }

        .custom-option.selected {
            background-color: #e8f0fe;
            color: #007bff;
        }

    .original-select {
        display: none;
    }
</style>

<div class="form-container">
    <h2>Edit Project</h2>
    <p>Edit the desired project information</p>

    <form asp-action="SaveEdit" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="CourseID" />

        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" />
            <span asp-validation-for="Title" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Description" class="form-label">Description</label>
            <textarea asp-for="Description" class="form-control"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="DifficultyLevel" class="control-label"></label>

            <!-- Original select (hidden) -->
            <select asp-for="DifficultyLevel" class="form-control original-select" id="originalLevel">
                <option value="">-- Select difficulty level</option>
                <option value="Beginner">Beginner</option>
                <option value="Intermediate">Intermediate</option>
                <option value="Advanced">Advanced</option>
            </select>

            <!-- Custom dropdown -->
            <div class="custom-select-wrapper">
                <div class="custom-select" id="customLevel">
                    <span class="custom-select-trigger">-- Select difficulty level</span>
                    <div class="custom-options">
                        <span class="custom-option" data-value="Beginner">Beginner</span>
                        <span class="custom-option" data-value="Intermediate">Intermediate</span>
                        <span class="custom-option" data-value="Advanced">Advanced</span>
                    </div>
                </div>
                <input type="hidden" asp-for="DifficultyLevel" />
            </div>

            <span asp-validation-for="DifficultyLevel" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-submit">Edit Project</button>
        <a asp-action="Details" asp-controller="Course" asp-route-CourseID="@Model.CourseID" class="btn btn-secondary">Cancel</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const originalSelect = document.getElementById('originalLevel');
            const customSelect = document.getElementById('customLevel');
            const customTrigger = customSelect.querySelector('.custom-select-trigger');
            const customOptions = customSelect.querySelector('.custom-options');
            const hiddenInput = document.querySelector('input[name="DifficultyLevel"]');
            const optionItems = customSelect.querySelectorAll('.custom-option');

            // Show selected value if already exists
            if (originalSelect.value) {
                customTrigger.textContent = originalSelect.value;
                optionItems.forEach(opt => {
                    if (opt.dataset.value === originalSelect.value) {
                        opt.classList.add("selected");
                    }
                });
            }

            customTrigger.addEventListener('click', function (e) {
                e.stopPropagation();
                customSelect.classList.toggle('open');
            });

            optionItems.forEach(option => {
                option.addEventListener('click', function () {
                    optionItems.forEach(o => o.classList.remove('selected'));
                    this.classList.add('selected');
                    customTrigger.textContent = this.textContent;
                    hiddenInput.value = this.dataset.value;
                    originalSelect.value = this.dataset.value;
                    customSelect.classList.remove('open');
                });
            });

            document.addEventListener('click', function () {
                customSelect.classList.remove('open');
            });

            customOptions.addEventListener('click', function (e) {
                e.stopPropagation();
            });
        });
    </script>
}
