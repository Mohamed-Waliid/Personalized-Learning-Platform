@model HomeViewModel

@{
    ViewData["Title"] = "Home";
}

<!doctype html>
<html class="no-js " lang="en">

<body>
    <section id="home" class="video-section js-height-full">
        @* <div class="overlay"></div> *@
        <div class="home-text-wrapper relative container">
            <div class="home-message wow slideInUp">
