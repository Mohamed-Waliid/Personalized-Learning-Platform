@model Quiz

@{
    ViewData["Title"] = "Delete Quiz";
    Layout = "~/Views/Shared/_Layout_form.cshtml";
}

<div class="form-container">
    <h2>Delete Quiz</h2>
    <p>Are you sure you want to delete the quiz "@Model.Title" that belongs to the course "@Model.Course.Title"?</p>

    <form asp-action="SaveDelete" method="post">
        <input type="hidden" asp-for="ID" />
        <input type="hidden" asp-for="CourseID" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Details" asp-controller="Course" asp-route-CourseID="@Model.CourseID" class="btn btn-secondary">Cancel</a>
    </form>
</div>