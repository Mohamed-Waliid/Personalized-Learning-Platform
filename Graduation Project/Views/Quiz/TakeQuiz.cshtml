@model List<Graduation_Project.ViewModels.Question.QuestionDetailsViewModel>

@{
    ViewData["Title"] = ViewBag.QuizName;
    Layout = "~/Views/Shared/_Layout.cshtml";
    bool showResults = ViewBag.ShowResults == true;
    int score = ViewBag.Score ?? 0;
    string courseId = ViewBag.CourseID?.ToString();
}

<div class="container py-5">
    <!-- Quiz Title -->
    <h2 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-ui-checks-grid me-2"></i> @ViewBag.QuizName
    </h2>

    <!-- Score after submission -->
    @if (showResults)
    {
        <div class="text-center mb-4">
            <div class="alert alert-info d-inline-block px-5 py-3 shadow-sm rounded-pill fs-5">
                <i class="bi bi-patch-check-fill text-success me-2"></i>
                You scored <strong>@score</strong> out of <strong>@Model.Count</strong>
            </div>
        </div>
    }

    <!-- Quiz Form -->
    <form asp-action="SubmitQuiz" method="post" id="quizForm">
        <input type="hidden" name="QuizID" value="@ViewBag.QuizID" />
        <input type="hidden" name="CourseID" value="@ViewBag.CourseID" />

        @for (int i = 0; i < Model.Count; i++)
        {
            var q = Model[i];
            var options = (q.AnswerOptions ?? "").Split(',');
            var selected = q.SelectedAnswer?.Trim();
            var correct = q.CorrectAnswer?.Trim();

            <div class="quiz-cont">
                <input type="hidden" name="Questions[@i].ID" value="@q.ID" />
                <h5 class="fw-bold text-dark mb-3">Q@(i + 1): @q.Text</h5>

                @for (int j = 0; j < options.Length; j++)
                {
                    var option = options[j].Trim();
                    var isSelected = option.Equals(selected, StringComparison.OrdinalIgnoreCase);
                    var isCorrect = option.Equals(correct, StringComparison.OrdinalIgnoreCase);

                    string colorClass = "";
                    string icon = "";

                    if (showResults)
                    {
                        if (isSelected && isCorrect)
                        {
                            colorClass = "border-success text-success bg-success bg-opacity-10 fw-semibold";
                            icon = "<i class='bi bi-check-circle-fill me-2'></i>";
                        }
                        else if (isSelected && !isCorrect)
                        {
                            colorClass = "border-danger text-danger bg-danger bg-opacity-10 fw-semibold";
                            icon = "<i class='bi bi-x-circle-fill me-2'></i>";
                        }
                        else if (!isSelected && isCorrect)
                        {
                            colorClass = "border-success text-success bg-opacity-25";
                            icon = "<i class='bi bi-check-circle me-2'></i>";
                        }
                    }
                    else if (isSelected)
                    {
                        colorClass = "active-option";
                    }

                    <div class="form-check">
                        <input class="form-check-input d-none option-radio"
                               type="radio"
                               name="Questions[@i].SelectedAnswer"
                               id="q@(i)_opt@(j)"
                               value="@option"
                        @(isSelected ? "checked" : "")
                        @(showResults ? "disabled" : "") />
                        <label class="@($"{colorClass}") quiz-lab @(showResults ? "disabled" : "enabled")" for="q@(i)_opt@(j)">
                            @Html.Raw(icon)
                            @option
                        </label>
                    </div>
                }
            </div>
            <hr>
        }

        <!-- Submit or Back Button -->
        <div class="text-center mt-5">
            @if (!showResults)
            {
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-send-check-fill me-2"></i> Submit Quiz
                </button>
            }
            else
            {
                <a href="@Url.Action("Details", "Course", new { CourseID = courseId })" class="btn btn-secondary"
                    style="width: 30%">
                    <i class="bi bi-arrow-left me-2"></i> Back to Course Details
                </a>
            }
        </div>
    </form>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const radios = document.querySelectorAll('.option-radio');
            radios.forEach(r => {
                r.addEventListener('change', () => {
                    const name = r.getAttribute('name');
                    document.querySelectorAll(`[name='${name}'] + label`).forEach(lbl => {
                        lbl.classList.remove('active-option');
                    });
                    if (r.checked) {
                        const label = document.querySelector(`label[for="${r.id}"]`);
                        label.classList.add('active-option');
                    }
                });
            });
        });
    </script>
    <!-- Bootstrap Icons CDN -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
}