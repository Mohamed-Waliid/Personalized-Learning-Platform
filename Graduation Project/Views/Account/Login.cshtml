@model LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout_form.cshtml";
}

<div class="login-container">
    <h2>Sign In</h2>
    <p class="text-muted">Welcome back! Please enter your details.</p>

    <form asp-action="SaveLogin" method="post">
        @* <div asp-validation-summary="All" class="text-danger mb-3"></div> *@

        <div class="form-group">
            <label asp-for="Email" class="form-label">Email</label>
            <input asp-for="Email" class="form-control" placeholder="Enter your email" />
            <span asp-validation-for="Email" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password" class="form-label">Password</label>
            <input asp-for="Password" class="form-control" type="password" placeholder="Enter your password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="form-group remember-me">
            <input asp-for="RememberMe" class="form-check-input" />
            <label asp-for="RememberMe" class="form-check-label">Remember me</label>
        </div>

        <button type="submit" class="btn btn-submit">Login</button>

        <p class="mt-3">
            Don't have an account? <a asp-action="Register" class="secondary-link">Register here</a>
        </p>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
